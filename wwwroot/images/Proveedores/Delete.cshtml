@model Productos.Models.Proveedores

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="delete-page">
    <div class="delete-container">
        <h1 class="delete-title">Eliminar Proveedor</h1>
        <hr class="delete-hr" />

        <div class="delete-details">
            <h4 class="delete-subtitle">¿Estás seguro de que deseas eliminar esto?</h4>
            <dl class="delete-dl">
                <dt>ID del Proveedor:</dt>
                <dd>@Html.DisplayFor(model => model.idproveedor)</dd>

                <dt>Nombre del Proveedor:</dt>
                <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                <dt>Nombre del Producto:</dt>
                <dd>@Html.DisplayFor(model => model.NombreProducto)</dd>

                <dt>Cantidad de Compra:</dt>
                <dd>@Html.DisplayFor(model => model.CantCompra)</dd>

                <dt>Tipo de Producto:</dt>
                <dd>@Html.DisplayFor(model => model.TipoProducto)</dd>

                <dt>Modelo:</dt>
                <dd>@Html.DisplayFor(model => model.Modelo)</dd>

                <dt>Precio:</dt>
                <dd>@Html.DisplayFor(model => model.Precio)</dd>

                <dt>Imagen Principal:</dt>
                <dd>@Html.DisplayFor(model => model.imgprincipal)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="idproveedor" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </form>
        </div>
    </div>
</div>

</body>
</html>
