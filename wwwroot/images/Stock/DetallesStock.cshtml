@model Productos.Models.Stock

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .details-container {
            background-color: #f3e8fd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .details-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<h1>Detalles del Producto</h1>

<div class="details-container">
    <h4>Detalles del Producto</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Numero del Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idproducto)
        </dd>

        <dt class="col-sm-2">
            Numero de Bodega
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumBodega)
        </dd>

        <dt class="col-sm-2">
            Tipo de Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoProducto)
        </dd>
        
        <dt class="col-sm-2">
            Cantidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>      

        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        
        <dt class="col-sm-2">
            Imagen Principal
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.imgprincipal" alt="Imagen del Producto" width="100" />
        </dd>
    </dl>
</div>

<div class="details-buttons">
    <a asp-action="Edit" asp-route-id="@Model?.idproducto" class="btn btn-primary">Editar</a>
    <a asp-action="InicioStock" class="btn btn-secondary">Volver a la Lista</a>
</div>

</body>
</html>
