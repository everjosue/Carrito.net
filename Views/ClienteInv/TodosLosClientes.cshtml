@model List<Productos.Models.ClienteInv>

<form class="form-inline" method="POST" action="/Home/Buscar">
    <div class="form-group mx-sm-3 mb-2">
        <label class="mr-3">Buscar</label>
        <input type="text" class="form-control" required name="busqueda" placeholder="Nombre del producto a buscar">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Buscar</button>
</form>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Mi Sitio de Compras</title>
    <link rel="stylesheet" href="~/site.css" />
</head>
<body>

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>
    <p>A continuaci√≥n se muestra el listado de los Clientes</p>
</div>
<div class="header">
    <img class="logo" src="/images/Representacion.png" alt="Logo de Mi Sitio de Compras">
    <img class="logo_secundario" src="/images/Logo_Principal.png" alt="Logo de Mi Sitio de Compras">
</div>

<br/>
<br/>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">    
            <div class="card mb-3">
                <div style="height: 150px; overflow: hidden;">
                    <img src="@item.imgcliente" class="card-img-top img-fluid" style="width: 100%; object-fit: cover;" alt="...">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    @if (!string.IsNullOrEmpty(item.Direccion) && item.Direccion.Length > 60)
                    {
                        <p class="card-text">@item.Direccion.Substring(0, 60)</p>
                    }
                    else
                    {
                        <p class="card-text">@item.Direccion</p>
                    }
                    <a href="/ClienteInv/Detalles/@item.idcliente" class="btn btn-primary">Detalles</a>
                </div>
            </div>
        </div>
    }
</div>



<li class="nav-item">
    <a asp-controller="Stock" asp-action="InicioStock" class="btn btn-primary boton-personalizado">Revisar Inventario</a>
</li>

</body>
</html>
