@model Productos.Models.ClienteInv

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="delete-page">
    <div class="delete-container">
        <h1 class="delete-title">Eliminar Cliente</h1>
        <hr class="delete-hr" />

        <div class="delete-details">
            <h4 class="delete-subtitle">¿Estás seguro de que deseas eliminar esto?</h4>
            <dl class="delete-dl">
                <dt>Nombre:</dt>
                <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                <dt>Correo:</dt>
                <dd>@Html.DisplayFor(model => model.Correo)</dd>

                <dt>Teléfono:</dt>
                <dd>@Html.DisplayFor(model => model.Telefono)</dd>

                <dt>Dirección:</dt>
                <dd>@Html.DisplayFor(model => model.Direccion)</dd>

                <dt>Imagen del Cliente:</dt>
                <dd>@Html.DisplayFor(model => model.imgcliente)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="idcliente" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </form>
        </div>
    </div>
</div>

</body>
</html>
