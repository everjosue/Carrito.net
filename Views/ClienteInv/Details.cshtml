@model Productos.Models.ClienteInv

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="details-page">
    <div class="details-container">
        <h1 class="details-title">Detalles</h1>
        <hr class="details-hr" />

        <div class="details-details">
            <h4 class="details-subtitle">Detalles del Cliente</h4>
            <dl class="details-dl">
                <dt>ID del Cliente:</dt>
                <dd>@Html.DisplayFor(model => model.idcliente)</dd>

                <dt>Nombre:</dt>
                <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                <dt>Correo:</dt>
                <dd>@Html.DisplayFor(model => model.Correo)</dd>

                <dt>Teléfono:</dt>
                <dd>@Html.DisplayFor(model => model.Telefono)</dd>

                <dt>Dirección:</dt>
                <dd>@Html.DisplayFor(model => model.Direccion)</dd>

                <dt>Imagen del Cliente:</dt>
                <dd>@Html.DisplayFor(model => model.imgcliente)</dd>
            </dl>
        </div>
        
        <div class="details-actions">
            <a asp-action="Edit" asp-route-id="@Model.idcliente" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

</body>
</html>
