@model Productos.Models.Proveedores

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="details-page">
    <div class="details-container">
        <h1 class="details-title">Detalles</h1>
        <hr class="details-hr" />

        <div class="details-details">
            <h4 class="details-subtitle">Detalles del Proveedor</h4>
            <dl class="details-dl">
                <dt>ID del Proveedor:</dt>
                <dd>@Html.DisplayFor(model => model.idproveedor)</dd>

                <dt>Nombre del Proveedor:</dt>
                <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                <dt>Pais del Proveedor:</dt>
                <dd>@Html.DisplayFor(model => model.PaisProveedor)</dd>

                <dt>Nombre del Producto:</dt>
                <dd>@Html.DisplayFor(model => model.NombreProducto)</dd>

                <dt>Cantidad de Compra:</dt>
                <dd>@Html.DisplayFor(model => model.CantCompra)</dd>

                <dt>Tipo de Producto:</dt>
                <dd>@Html.DisplayFor(model => model.TipoProducto)</dd>

                <dt>Modelo:</dt>
                <dd>@Html.DisplayFor(model => model.Modelo)</dd>

                <dt>Precio:</dt>
                <dd>@Html.DisplayFor(model => model.Precio)</dd>
                <dd class="col-sm-10">
                    <img src="@Model.imgprincipal" alt="Imagen del Producto" width="100" />
                </dd>

            </dl>
        </div>
        
        <div class="details-actions">
            <a asp-action="Edit" asp-route-id="@Model?.Idcompra" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

</body>
</html>
