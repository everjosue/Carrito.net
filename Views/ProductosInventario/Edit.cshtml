@model Productos.Models.ProductosInventario

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar producto</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="edit-page">
    <div class="edit-container">
        <h1 class="edit-title">Editar Producto</h1>
        <hr class="edit-hr" />

        <div class="edit-form">
            <form asp-action="Edit" class="styled-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="idproducto" />
                <input type="hidden" asp-for="SuminisInventarioidproveedor" />



                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label">Marca</label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Modelo" class="control-label">Modelo</label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label">Precio</label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="descripcion" class="control-label">Descripción</label>
                    <input asp-for="descripcion" class="form-control" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imgprincipal" class="control-label">Imagen Principal</label>
                    <input asp-for="imgprincipal" class="form-control" />
                    <span asp-validation-for="imgprincipal" class="text-danger"></span>
                </div>

                <!-- Incluir el parcial de edición de reseñas -->

                @foreach (var resenia in Model.Resenias)
                {
                    Html.RenderPartial("_EditarReseniasPartial", resenia);
                }


                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>

            </form>
        </div>

        <div class="edit-back-link">
            <a asp-action="Index" class="btn btn-secondary">Inicio</a>
        </div>
    </div>
</div>

</body>
</html>
