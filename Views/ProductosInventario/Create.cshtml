@model Productos.Models.ProductosInventario

@{
    ViewData["Title"] = "Crear";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Enlace al archivo CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="create-page">
    <div class="create-container">
        <h1 class="create-title">Registrar Producto en el Inventario</h1>
        <hr class="create-hr" />
        
        <div class="create-form">
            <form asp-action="Create" class="styled-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="idproducto" class="control-label">ID del Producto</label>
                    <input asp-for="idproducto" class="form-control" />
                    <span asp-validation-for="idproducto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SuminisInventarioidproveedor" class="control-label">Id del Proveedor</label>
                    <input asp-for="SuminisInventarioidproveedor" class="form-control" />
                    <span asp-validation-for="SuminisInventarioidproveedor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label">Marca</label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Modelo" class="control-label">Modelo</label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label">Precio</label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="descripcion" class="control-label">Descripción</label>
                    <input asp-for="descripcion" class="form-control" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imgprincipal" class="control-label">Imagen Principal</label>
                    <input asp-for="imgprincipal" class="form-control" />
                    <span asp-validation-for="imgprincipal" class="text-danger"></span>
                </div>
                
                <!-- Agrega aquí la vista parcial _ComentariosPartial -->
                <!--@await Html.PartialAsync("_ComentariosPartial", new Productos.Models.Resenias()) -->
                
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
        
        <div class="create-back-link">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

</body>
</html>
