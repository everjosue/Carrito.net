@model IEnumerable<Productos.Models.PedidoInv>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<h1>Listado de pedidos</h1>

<p class="create-link">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<div class="vertical-list">
    @foreach (var item in Model) {
        <div class="list-item">
            <img src="@item.imgpedido" alt="Imagen del Pedido" width="100" />
            <div class="item-details">
                <div><strong>ID de Pedido:</strong> @item.idpedido</div>
                <div><strong>Fecha:</strong> @item.Fecha</div>
                <div><strong>Monto:</strong> $@item.Monto</div>
                <div><strong>Estado:</strong> @item.Estado</div>
                <div><strong>Direcci√≥n de Entrega:</strong> @item.Direccion_Entrega</div>
            </div>
            <div class="item-actions">
                <a asp-action="Edit" asp-route-id="@item.idpedido" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.idpedido" class="btn btn-secondary">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.idpedido" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
        <hr class="list-separator" />
    }
</div>



</body>
</html>
