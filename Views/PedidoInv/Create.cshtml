@model Productos.Models.PedidoInv

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Enlace al archivo CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="create-page">
    <div class="create-container">
        <h1 class="create-title">Registrar Pedido en el Inventario</h1>
        <hr class="create-hr" />
        
        <div class="create-form">
            <form asp-action="Create" class="styled-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="idpedido" class="control-label">ID del Pedido</label>
                    <input asp-for="idpedido" class="form-control" />
                    <span asp-validation-for="idpedido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClienteInvidcliente" class="control-label">ID del Cliente</label>
                    <input asp-for="ClienteInvidcliente" class="form-control" />
                    <span asp-validation-for="ClienteInvidcliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Monto" class="control-label">Monto</label>
                    <input asp-for="Monto" class="form-control" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="control-label">Estado</label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Direccion_Entrega" class="control-label">Direcci√≥n de Entrega</label>
                    <input asp-for="Direccion_Entrega" class="form-control" />
                    <span asp-validation-for="Direccion_Entrega" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="imgpedido" class="control-label">Imagen del Pedido</label>
                    <input asp-for="imgpedido" class="form-control" />
                    <span asp-validation-for="imgpedido" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
        
        <div class="create-back-link">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

</body>
</html>
