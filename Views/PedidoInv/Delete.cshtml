@model Productos.Models.PedidoInv

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="delete-page">
    <div class="delete-container">
        <h1 class="delete-title">Eliminar Pedido</h1>
        <hr class="delete-hr" />

        <div class="delete-details">
            <h4 class="delete-subtitle">¿Estás seguro de que deseas eliminar esto?</h4>
            <dl class="delete-dl">
                <dt>ID del Pedido:</dt>
                <dd>@Html.DisplayFor(model => model.idpedido)</dd>

                <dt>Monto:</dt>
                <dd>@Html.DisplayFor(model => model.Monto)</dd>

                <dt>Estado:</dt>
                <dd>@Html.DisplayFor(model => model.Estado)</dd>

                <dt>Dirección de Entrega:</dt>
                <dd>@Html.DisplayFor(model => model.Direccion_Entrega)</dd>

                <dt>Imagen del Pedido:</dt>
               dd><img src="@Model.imgpedido" width="200" alt="Imagen del Pedido" /></dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="idpedido" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </form>
        </div>
    </div>
</div>

</body>
</html>
