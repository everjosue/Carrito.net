@model Productos.Models.SuminisInventario

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Enlace al archivo CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="create-page">
    <div class="create-container">
        <h1 class="create-title">Crear Proveedor</h1>
        <hr class="create-hr" />
        
        <div class="create-form">
            <form asp-action="Create" class="styled-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="idproveedor" class="control-label">ID del Proveedor</label>
                    <input asp-for="idproveedor" class="form-control" />
                    <span asp-validation-for="idproveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Proveedor</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PaisProveedor" class="control-label">Nombre del pais del Proveedor</label>
                    <input asp-for="PaisProveedor" class="form-control" />
                    <span asp-validation-for="PaisProveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="descripcion" class="control-label">Descripci√≥n</label>
                    <input asp-for="descripcion" class="form-control" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="imgproveedor" class="control-label">Logo</label>
                    <input asp-for="imgproveedor" class="form-control" />
                    <span asp-validation-for="imgproveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
        
        <div class="create-back-link">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

</body>
</html>
